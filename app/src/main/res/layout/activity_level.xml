<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/level_detail_fragment">

    <TextView
        android:id="@+id/levelTitleTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.060000002"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/bronzeTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Score for Bronze -"
        android:textColor="@color/black"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        app:layout_constraintWidth_percent=".7" />

    <TextView
        android:id="@+id/silverTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Score for Silver -"
        android:textColor="@color/black"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bronzeTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"

        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".7"/>

    <TextView
        android:id="@+id/goldTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Score for Gold -"
        android:textColor="@color/black"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/silverTV"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".7"/>

    <ImageView
        android:id="@+id/bronzeBubbleImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/bronzeTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bronzeTV"

        app:layout_constraintWidth_percent=".2"
        app:srcCompat="@drawable/bubble_bronze" />

    <ImageView
        android:id="@+id/silverBubbleImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/silverTV"
        app:layout_constraintEnd_toEndOf="@+id/bronzeBubbleImg"
        app:layout_constraintTop_toTopOf="@+id/silverTV"
        app:srcCompat="@drawable/bubble_silver"

        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"/>

    <ImageView
        android:id="@+id/goldBubbleImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/goldTV"
        app:layout_constraintEnd_toEndOf="@+id/silverBubbleImg"
        app:layout_constraintTop_toTopOf="@+id/goldTV"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/bubble_gold"

        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"/>

    <Button
        android:id="@+id/levelPlayBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Play"
        android:elevation="2dp"
        android:background="@drawable/button_rounded_corner"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"

        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".4"

         />

    <ImageButton
        android:id="@+id/levelDetailBackButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:elevation="2dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintWidth_percent=".1"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>