<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/game_input_fragment">

    <TextView
        android:id="@+id/GameInputsHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Custom Game Configuration"
        android:elevation="3dp"
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        app:layout_constraintWidth_percent=".90" />

    <Button
        android:id="@+id/enterBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_rounded_corner"
        android:elevation="3dp"
        android:onClick="playGame"
        android:text="Play"
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColumnsSpinner"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintWidth_percent=".50" />

    <TextView
        android:id="@+id/ColumnsTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Columns: "
        android:elevation="3dp"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/FloorsTxt"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ColumnsSpinner"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/ColumnsSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/FloorSpinner"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintWidth_percent=".45" />


    <TextView
        android:id="@+id/FloorsTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Floors:"
        android:elevation="3dp"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/TupperwareTxt"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="@+id/FloorSpinner"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/FloorSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TupperwareSpinner"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/TupperwareTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Plastic Containers:"
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TupperwareSpinner"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/TupperwareSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:popupBackground="#c2c2c2"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CupSpinner"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/mixingBowlTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Mixing Bowls:"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TupperwareTxt"
        app:layout_constraintHeight_percent="0.08"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/mixingBowlSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/TupperwareSpinner"
        app:layout_constraintTop_toTopOf="@+id/mixingBowlTV"

        app:layout_constraintWidth_percent=".45"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/CupsText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Percentage Cups:"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/mixingBowlTV"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CupSpinner"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/CupSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:popupBackground="#c2c2c2"
        android:textColor="@color/black"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/UtensilCornerTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Utensil Corner:"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CupsText"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/UtensilCornerSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/CupSpinner"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toEndOf="@+id/UtensilCornerTV"
        app:layout_constraintTop_toTopOf="@+id/UtensilCornerTV"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/UtnesilZoneAmountTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Utensil Zones:"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/UtensilCornerTV"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.84000003"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/UtensilAmountSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/CupSpinner"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UtnesilZoneAmountTV"

        app:layout_constraintTop_toTopOf="@+id/UtnesilZoneAmountTV"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/UtensilOrientationTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:text="Utensil Direction:"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/UtnesilZoneAmountTV"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintWidth_percent=".45" />

    <Spinner
        android:id="@+id/UtensilOrientationSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:popupBackground="#c2c2c2"
        android:elevation="3dp"
        android:gravity="center_vertical"

        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/UtensilAmountSpinner"
        app:layout_constraintTop_toTopOf="@+id/UtensilOrientationTV"
        app:layout_constraintWidth_percent=".45"
        app:layout_constraintHeight_percent="0.08"/>

    <ImageButton
        android:id="@+id/gameInputBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:elevation="3dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"

        app:layout_constraintWidth_percent=".1"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>